<!DOCTYPE html>
<html>
  <head>
  	<meta charset="UTF-8">
    <title>Bibliothèque</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/stylesheets/bootstrap.css' />
    <link rel='stylesheet' href='/stylesheets/bootstrap-theme.css' />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/s/bs/jq-2.1.4,dt-1.10.10/datatables.css"/>
    <script src="/javascripts/jquery-2.1.4.js"></script>
    <script src="/javascripts/bootstrap.js"></script>
    <script src="/javascripts/app.js"></script>
  </head>
  <body>
  	<div class="container-fluid">
  		<section class="jumbotron">
  			<div class="container">
		  		<div class="row">
		  			<div class="col-md-12">
					    <h1><%= title %></h1>
					</div>
			    </div>
		    </div>
	    </section>
		
	    <section>
		    <div class="row">
		    	<div class="col-md-12">
				    <form id="search" class="form-horizontal">
				    	<div class="form-group">
				    		<label class="sr-only" for="query">Rechercher</label>
				    		<div class="col-md-offset-2 col-md-8">
								<input type="text" class="form-control" placeholder="Rechercher" name="query" id="query" value="<%= query %>"/>
							</div>
						</div>
				    </form>
			    </div>
		    </div>
	    </section>
	    
	    <section>
		    <div class="row">
		    	<div class="col-md-12">
				    <table class="table table-hover recherche">
				    	<tr>
				    		<th class="col-md-2"><a href="#" id="serie">série</a></th>
				    		<th class="col-md-5"><a href="#" id="titre">titre</a></th>
				    		<th class="col-md-1"><a href="#" id="numero">numéro</a></th>
				    		<th class="col-md-1"><a href="#" id="annee">année</a></th>
				    		<th class="col-md-3"><a href="#" id="auteur">auteur</a></th>
				    	</tr>
				    </table>
				</div>
		    </div>
	    </section>
    </div>
  </body>
</html>
